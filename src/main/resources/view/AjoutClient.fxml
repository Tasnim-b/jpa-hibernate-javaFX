<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controller.AjoutClientController"
          style="-fx-background-color: #f1e9e2;" vgap="10" hgap="10" alignment="CENTER">

    <!-- Titre avec fx:id ajouté et marge définie via une balise imbriquée -->
    <Label text="Ajouter Client"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"
           GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
           GridPane.halignment="CENTER"/>

    <!-- Champ Nom -->
    <Label text="Nom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Champ Prénom -->
    <Label text="Prénom:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="PrenonField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- Champ Email -->
    <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Champ Téléphone -->
    <Label text="Téléphone:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <!-- Champ Adresse -->
    <Label text="Adresse:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="AdressField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <!-- Boutons -->
    <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="6" GridPane.columnSpan="2">
        <Button text="Ajouter" fx:id="submitButton" style="-fx-background-color: #b49786; -fx-text-fill: white;"/>
        <Button text="Annuler" fx:id="cancelButton" />
    </HBox>
</GridPane>
